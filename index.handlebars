<!DOCTYPE html>
<html>
<head>
    <script type="text/javascript" src="http://js.nicedit.com/nicEdit-latest.js"></script> 
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
    <link href="https://code.jquery.com/ui/1.11.1/themes/ui-darkness/jquery-ui.css" rel="stylesheet"/>
    <script src="https://code.jquery.com/ui/1.11.1/jquery-ui.min.js"></script>
    <style>
        body, html{
            width:100%;
            height:100%;
            padding: 0;
            margin: 0;
        }

        header{
            width:100%;
            height: 50px;
        }

        section{
            width: 100%;
            height: calc(100% - 110px);
        }


        footer{
            width: 100%;
            height: 60px;
        }

        #container {
            display: flex;
        }

        #clauses-container {
            width: 150px;
            background: white;
            /*    border-style: inset;*/
            /* Just so it's visible */
        }

        #features-container {
            width: 500px;
            background: white;
            /*    border-style: inset;*/
            /* Just so it's visible */
        }

        #editor-container {
            flex: 1;
            /* Grow to rest of container */
            background: white;
            /*    border-style: inset;*/
            /* Just so it's visible */
        }
    </style>
</head>

<body>
    <script>
        bkLib.onDomLoaded(function() {
            new nicEditor({
                maxHeight : 500,
                fullPanel : true
            }).panelInstance('area');
        });
    </script>
    <header style="text-align:center;">
        <h1>Real Time Contract Editor</h1>
    </header>
    <section>
        <div id="container">
            <div id="clauses-container">
            </div>
            <div id="editor-container" ondrop="dropped(event)">
                <textarea id="area" ondrop="dropped(event)" ondragover="return false" style="height:550px" cols="125">
                    Some Initial Content was in this textarea
                </textarea>
                <button id="but" draggable="true" onclick="getContent()">Get Content</button>
            </div>
            <div id="features-container">
            </div>
        </div>
    </section>
    <footer style="text-align:center;">
        <h6>SAP Ariba, Innovation 2016</h6>
    </footer>
</body>
    
</html>